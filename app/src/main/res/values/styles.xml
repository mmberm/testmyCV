<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textResumeCV" >
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="autoSizeMinTextSize">5sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="textResumeCVLabel" parent="textResumeCV">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewStyle" parent="Base.CardView" >
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
    </style>


</resources>
