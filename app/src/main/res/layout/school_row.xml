<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_skills_card_view"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCardView">

        <android.support.constraint.Guideline
            android:id="@+id/divVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <TextView
            android:id="@+id/institutionNameTextView"
            style="@style/textResumeCV"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/academyLevelLabelTextView"
            style="@style/textResumeCVLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            app:layout_constraintEnd_toStartOf="@+id/divVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/institutionNameTextView" />

        <TextView
            android:id="@+id/academyLevelTextView"
            style="@style/textResumeCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/divVertical"
            app:layout_constraintTop_toBottomOf="@+id/institutionNameTextView" />

        <TextView
            android:id="@+id/startDateLabelTextView"
            style="@style/textResumeCVLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicie: "
            app:layout_constraintEnd_toStartOf="@+id/divVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academyLevelTextView" />

        <TextView
            android:id="@+id/startDateTextView"
            style="@style/textResumeCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/divVertical"
            app:layout_constraintTop_toBottomOf="@+id/academyLevelTextView" />

        <TextView
            android:id="@+id/endDateLabelTextView"
            style="@style/textResumeCVLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalice: "
            app:layout_constraintEnd_toStartOf="@+id/divVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startDateTextView" />

        <TextView
            android:id="@+id/endDateTextView"
            style="@style/textResumeCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/divVertical"
            app:layout_constraintTop_toBottomOf="@+id/startDateTextView" />

        <TextView
            android:id="@+id/titleObtainLabelTextView"
            style="@style/textResumeCVLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo: "
            app:layout_constraintEnd_toStartOf="@+id/divVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endDateTextView" />

        <TextView
            android:id="@+id/titleObtainTextView"
            style="@style/textResumeCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/divVertical"
            app:layout_constraintTop_toBottomOf="@+id/endDateTextView" />

        <View
            android:id="@+id/lineDiv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/titleObtainTextView" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
